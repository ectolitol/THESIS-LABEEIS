const express = require('express');
const reportController = require('../controllers/reportController');
const router = express.Router();

// GET route to fetch all reports
router.get('/all-report', reportController.getAllReports);

// POST route to create a new report
router.post('/make-reports', reportController.createReport);

// GET route to fetch all reports for a specific item
router.get('/reports/:itemId', reportController.getReportsForItem);

// Route to update the status of a specific report by its ID
router.put('/:id/status', reportController.updateReportStatus);



module.exports = router;
